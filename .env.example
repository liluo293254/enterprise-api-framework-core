# ============================================
# Server Configuration
# ============================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# ============================================
# API Configuration
# ============================================
API_VERSION=v1
API_BASE_PATH=/api

# ============================================
# Swagger/OpenAPI Documentation
# ============================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
SWAGGER_TITLE=API Documentation
SWAGGER_DESCRIPTION=API Documentation
SWAGGER_VERSION=1.0.0

# ============================================
# CORS Configuration
# ============================================
# Set to 'true' to allow all origins, or specify comma-separated origins
# Example: CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_ORIGIN=true
CORS_CREDENTIALS=true

# ============================================
# Database Configuration
# ============================================
# For development, SQLite is used by default if not specified
# DATABASE_URL=file:./dev.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# For MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/dbname
DATABASE_URL=

# ============================================
# Logging Configuration
# ============================================
# Log levels: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
LOG_ENABLE_REQUEST=true
LOG_ENABLE_ERROR=true
LOG_ENABLE_PERFORMANCE=true
# Optional: Log file path for production
# LOG_FILE=./logs/app.log
